<RealityView audibleClicks>
  <Attachment id="palette" template="attachments">
    <.palette color={@color} />
  </Attachment>
  <ViewAttachmentEntity
    attachment="palette"
    transform:translation={[0, -@scale / 2, @scale / 2 + 0.03]}
    transform:rotation={Nx.to_list(Quaternion.euler(-:math.pi / 2, 0, 0))}
  />
  <.world
    blocks={@blocks}
    
    width={@width}
    height={@height}
    depth={@depth}
    
    scale={@scale}
    rotation={@rotation}
  />
</RealityView>